{% extends 'admin/index.html.twig' %}

{% block body %}
    <h1>Ratings list({{ratings|length}})</h1>

   <div class="module-body table">
           <table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped  display" width="100%">
                                     
        
        <thead>
            <tr>
                <th>Id</th>
                <th>Stars</th>
                <th>Review</th>
                <th>Book title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rating in ratings %}
            <tr>
                <td><a href="{{ path('admin_ratings_show', { 'id': rating.id }) }}">{{ rating.id }}</a></td>
                <td>{{ rating.stars }}</td>
                <td>{{ rating.review }}</td>
                 <td>{{ rating.book.title }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_ratings_show', { 'id': rating.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_ratings_edit', { 'id': rating.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_ratings_new') }}">Create a new rating</a>
        </li>
    </ul>
{% endblock %}
