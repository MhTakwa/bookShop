{% extends 'admin/index.html.twig' %}

{% block body %}
    

     <div class="module">
     <div class="module-head">
     <h3> Orders list({{orders|length}})</h3>
            </div>
            <div class="module-body table">
           <table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped  display" width="100%">
                                     
    {%set total=0%}
        <thead>
            <tr>
                <th>Id</th>
                <th>Total</th>
                <th>Full Name</th>

                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>{%set total=total+order.total%}
                <td><a href="{{ path('admin_orders_show', { 'id': order.id }) }}">{{ order.id }}</a></td>
                <td>{{ order.total }}</td>
                <td>{{order.fullname}}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_orders_show', { 'id': order.id }) }}">show</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        <tr><td><h5>Total:</h5></td><td><h5>{{total}} DT</h5></tr>
        </tbody>
    </table></div></div>

    
{% endblock %}
